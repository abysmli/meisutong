<div class="page-header">
    <h1><%= title %></h1>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" id="doc_form">
            <div class="form-group">
                <label for="title">标题</label>
                <input type="text" class="form-control" id="title" placeholder="标题" name="title" value="<%= doc.title || '' %>">
            </div>
            <div class="form-group">
                <label for="description">说明</label>
                <input type="text" class="form-control" id="description" placeholder="说明" name="description" value="<%= doc.description || ""%>">
            </div>
            <br/>
            <h4>内容</h4>
            <div id="summernote_content"><%- doc.content || "" %></div>
            <hr/>
            <button type="submit" id="post_button" class="btn btn-default"><span class="glyphicon glyphicon-share-alt"></span> 确认</button>
        </form>
    </div>
</div>
<hr/>
<script>
    $(document).ready(function() {
        $("#doc_page").addClass("active");
        $('#doc_form').submit(function(event) {
            var data = {
                content: $('#summernote_content').summernote('code')
            };
            post(data, "doc_form");
        });
        $('#summernote_content').summernote({
            height: 500,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
        });

    });
</script>