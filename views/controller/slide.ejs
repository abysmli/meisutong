<div class="page-header">
    <h1><%= title %> <small> | 共计 <%= slides.length %> 个首页轮播</small></h1>
    <a class="btn btn-warning btn-sm" href="/controller/slide/add">添加一个首页轮播</a>
</div>
<table id="slide_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>标题</th>
            <th>描述</th>
            <th>添加时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>标题</th>
            <th>描述</th>
            <th>添加时间</th>
            <th>操作</th>
        </tr>
    </tfoot>
    <tbody>
        <% slides.forEach(function(slide, index) { %>
            <tr>
                <td>
                    <%= slide.title %>
                </td>
                <td>
                    <%= slide.description %>
                </td>
                <td>
                    <%= (new Date(slide.updated_at)).toLocaleString("en-US", {timeZone: "Asia/Shanghai"}) %>
                </td>
                <td>
                    <a type="button" class="btn btn-default" href="/controller/slide/edit?id=<%= slide._id %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a type="button" class="btn btn-default" href="/controller/slide/remove?id=<%= slide._id %>"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#slide_page").addClass("active");
        var dt = $('#slide_table').DataTable({
            lengthMenu: [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            stateSave: true,
        });
    });
</script>